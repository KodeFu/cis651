<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/next_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="NextActivity"
        android:text="Next Activity"
        />

    <Button
        android:id="@+id/move_and_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MoveAndRotate"
        android:text="Move and Rotate"
        />

    <Button
        android:id="@+id/move_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="MoveBack"
        android:text="Move Back"
        />

    <Button
        android:id="@+id/fade_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="FadeOut"
        android:text="Fade Out"
        />

    <Button
        android:id="@+id/fade_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="FadeIn"
        android:text="Fade In"
        />

    <Button
        android:id="@+id/xml_animator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="XMLAnimator"
        android:text="XML Animator"
        />
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/avatar"
        />

</LinearLayout>