<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/task2button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/task2button1"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 3"
        app:layout_constraintTop_toBottomOf="@id/task2button2"
        app:layout_constraintLeft_toRightOf="@id/task2button2"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 4"
        app:layout_constraintTop_toBottomOf="@id/task2button3"
        app:layout_constraintRight_toLeftOf="@id/task2button3"
        android:onClick="onTask0ButtonClicked"
        />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textSize="32dp"
        app:layout_constraintTop_toBottomOf="@id/task2button4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="onTask0ButtonClicked"
        />
    <ImageView
        android:id="@+id/dividerImage"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:background="@drawable/black"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/task2button4"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/task2button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 5"
        app:layout_constraintTop_toBottomOf="@id/dividerImage"
        app:layout_constraintLeft_toLeftOf="@id/task2button4"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 6"
        app:layout_constraintTop_toBottomOf="@id/dividerImage"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 7"
        app:layout_constraintTop_toBottomOf="@id/task2button6"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="onTask0ButtonClicked"
        />
    <Button
        android:id="@+id/task2button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@id/task2button6"
        app:layout_constraintRight_toLeftOf="@id/task2button7"
        android:drawableLeft="@drawable/search"
        android:onClick="onTask0ButtonClicked"
        />


</androidx.constraintlayout.widget.ConstraintLayout>